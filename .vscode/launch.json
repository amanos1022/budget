{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Import Command",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/budget_tracker",
      "args": ["import", "--csv=credit-card.csv", "--overwrite"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "miDebuggerPath": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
